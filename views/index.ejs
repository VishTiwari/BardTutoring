    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-left">
                <a href="/view-tutors" class="border-shadow">
                    <span class="text-gradient">View Tutors <i class="fas fa-chalkboard-teacher"></i></span>
